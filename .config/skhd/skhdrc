# -- Changing Window Focus --

# change window focus within space
ctrl - j : yabai -m window --focus south
ctrl - k : yabai -m window --focus north
ctrl - h : yabai -m window --focus west
ctrl - l : yabai -m window --focus east

# focus left monitor
ctrl - a : yabai -m display --focus west

# focus right monitor
ctrl - s : yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
shift + ctrl - r : yabai -m space --rotate 270

# flip along y-axis
shift + ctrl - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + ctrl - x : yabai -m space --mirror x-axis

# toggle window float
shift + ctrl - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
shift + ctrl - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + ctrl - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + ctrl - j : yabai -m window --swap south
shift + ctrl - k : yabai -m window --swap north
shift + ctrl - h : yabai -m window --swap west
shift + ctrl - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
ctrl + shift - a : yabai -m window --display north; yabai -m display --focus north;
ctrl + shift - s : yabai -m window --display south; yabai -m display --focus south;


# move window to prev and next space
shift + ctrl - p : yabai -m window --space prev;
shift + ctrl - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;


# Grow
shift + cmd - h : yabai -m window --resize left:-10:0 
shift + cmd - j : yabai -m window --resize bottom:0:10 
shift + cmd - k : yabai -m window --resize top:0:-10 
shift + cmd - l : yabai -m window --resize right:10:0

# Shrink
ctrl + cmd - h : yabai -m window --resize left:10:0
ctrl + cmd - j : yabai -m window --resize bottom:0:-10
ctrl + cmd - k : yabai -m window --resize top:0:10
ctrl + cmd - l : yabai -m window --resize right:-10:0

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
